{
  "name": "PASRS Helper",
  "description": "Automatically uploads the replay of your last battle in PSD.",
  "version": "0.5.0",
  "manifest_version": 3,
  "icons": {
    "128": "128.png"
  },
  "host_permissions": [
    "https://play.pokemonshowdown.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ],
      "js": [
        "dist/extension.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/showdown.js",
        "dist/lib-react.js",
        "dist/react.js",
        "dist/react.css"
      ],
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "pasrs-helper@malaow3.com",
      "strict_min_version": "109.0"
    }
  }
}
