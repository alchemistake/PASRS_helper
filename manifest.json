{
  "name": "PASRS Helper",
  "description": "Automatically uploads the replay of your last battle in PSD.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "128": "128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ],
      "js": [
        "dist/extension.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dist/showdown.js",
        "dist/lib-react.js",
        "dist/react.js",
        "dist/react.css"
      ],
      "matches": [
        "https://play.pokemonshowdown.com/*"
      ]
    }
  ]
}